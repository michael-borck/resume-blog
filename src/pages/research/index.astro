---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';

// Import research markdown files
const publicationsFile = await Astro.glob('../../../docs/research/publications.md');
const publications = publicationsFile.length > 0 ? publicationsFile[0] : null;
---

<Layout title="Research | Michael Borck">
  <div class="magazine-section">
    <h1 class="section-title">Research</h1>
    
    <section class="research-publications">
      <h2>Publications</h2>
      
      {publications ? (
        <div class="publications-content">
          <publications.Content />
        </div>
      ) : (
        <p>Publication information is being updated.</p>
      )}
    </section>
  </div>
</Layout>

<style>
  section {
    margin-bottom: 3rem;
  }
  
  h2 {
    font-size: 1.8rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #eaeaea;
  }
  
  .publications-content {
    max-width: 900px;
  }
  
  .publications-content :global(ol),
  .publications-content :global(ul) {
    padding-left: 1.5rem;
    margin-bottom: 1.5rem;
  }
  
  .publications-content :global(li) {
    margin-bottom: 0.75rem;
  }
</style>