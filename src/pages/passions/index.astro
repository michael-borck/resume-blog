---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';

// Import all passion markdown files
const passionFiles = await Astro.glob('../../../docs/passions/*.md');

// Transform the data for use in cards
const passions = passionFiles.map(file => ({
  title: file.frontmatter.title || file.file.split('/').pop().replace('.md', ''),
  description: file.frontmatter.description || '',
  categories: file.frontmatter.categories || [],
  slug: file.url || '#',
  content: file.Content,
}));
---

<Layout title="Passions | Michael Borck">
  <div class="magazine-section">
    <h1 class="section-title">Passions & Interests</h1>
    
    <p class="section-intro">
      Beyond my professional life, I pursue a variety of passions that bring joy, 
      balance, and continuous learning to my journey.
    </p>
    
    <div class="card-grid">
      {passions.map((passion, index) => (
        <Card 
          title={passion.title}
          description={passion.description}
          categories={passion.categories}
          featured={index === 0}
        >
          <div class="passion-content">
            <passion.content />
          </div>
        </Card>
      ))}
    </div>
  </div>
</Layout>

<style>
  .section-intro {
    font-size: 1.2rem;
    max-width: 800px;
    margin: 0 auto 2rem;
    text-align: center;
  }
  
  .passion-content {
    margin-top: 1rem;
  }
</style>