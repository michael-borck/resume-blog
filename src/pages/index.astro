---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Michael Borck | Resume Magazine">
  <section class="hero">
    <div class="hero-content">
      <h1>Michael Borck</h1>
      <h2>Educator, Researcher, Developer</h2>
      <p>Welcome to my resume magazine - a creative showcase of my professional journey and personal passions.</p>
      <div class="hero-cta">
        <a href="/about" class="cta-button">Get to Know Me</a>
        <a href="/docs/files/resume.pdf" class="cta-button secondary">Download Resume</a>
      </div>
    </div>
  </section>

  <section class="magazine-section">
    <h2 class="section-title">Featured</h2>
    <div class="card-grid">
      <Card 
        title="About Me" 
        description="Get to know the man behind the code, the camera, and the guitar."
        href="/about"
        categories={["Personal Profile", "Background"]}
        featured={true}
      />
      <Card 
        title="Projects" 
        description="Discover my technical projects and professional accomplishments."
        href="/projects"
        categories={["Portfolio", "Development"]}
      />
      <Card 
        title="Teaching" 
        description="Explore my academic journey and educational philosophy."
        href="/teaching"
        categories={["Academia", "Education"]}
      />
      <Card 
        title="Research" 
        description="Browse my published works and research interests."
        href="/research"
        categories={["Publications", "Academic"]}
      />
      <Card 
        title="Passions" 
        description="Beyond work - the hobbies and interests that define me."
        href="/passions"
        categories={["Personal", "Interests"]}
      />
    </div>
  </section>
</Layout>

<style>
  .hero {
    margin: 2rem 0 4rem;
    text-align: center;
  }

  .hero h1 {
    font-size: 3.5rem;
    margin-bottom: 0.5rem;
  }

  .hero h2 {
    font-size: 1.75rem;
    font-weight: 400;
    color: var(--accent-light);
    margin-bottom: 1.5rem;
  }

  .hero p {
    max-width: 600px;
    margin: 0 auto 2rem;
    font-size: 1.2rem;
  }

  .hero-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    margin-top: 2rem;
  }

  .cta-button {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: var(--accent-light);
    color: white;
    border-radius: 4px;
    font-weight: 600;
    transition: background-color 0.2s ease;
  }

  .cta-button:hover {
    background-color: var(--accent-dark);
    text-decoration: none;
  }

  .cta-button.secondary {
    background-color: transparent;
    color: var(--accent-light);
    border: 2px solid var(--accent-light);
  }

  .cta-button.secondary:hover {
    background-color: #f0f0f0;
  }
</style>