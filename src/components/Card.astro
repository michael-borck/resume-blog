---
interface Props {
  title: string;
  description: string;
  href?: string;
  categories?: string[];
  featured?: boolean;
}

const { title, description, href, categories = [], featured = false } = Astro.props;
---

<div class={`card ${featured ? 'featured-card' : ''}`}>
  <h3>{href ? <a href={href}>{title}</a> : title}</h3>
  <p>{description}</p>
  {categories.length > 0 && (
    <div class="categories">
      {categories.map(category => (
        <span class="category">{category}</span>
      ))}
    </div>
  )}
  <slot />
</div>

<style>
  .card {
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .card h3 {
    margin-bottom: 0.75rem;
  }
  
  .featured-card {
    background-color: #f8f9fa;
    border-left: 4px solid var(--accent-light);
  }
  
  .categories {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 1rem;
  }
  
  .category {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background-color: #eaedfc;
    color: var(--accent-dark);
    border-radius: 4px;
  }
</style>